# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# Authentication
VITE_JWT_SECRET=your-super-secure-jwt-secret-key-here
VITE_REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Database
VITE_MONGODB_URI=mongodb://localhost:27017/heartout

# Email Service (for notifications)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# WebRTC Configuration
VITE_STUN_SERVER=stun:stun.l.google.com:19302
VITE_ICE_SERVERS='[{"urls": "stun:stun.l.google.com:19302"}]'

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Feature Flags
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# Rate Limiting
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_RATE_LIMIT_MAX_REQUESTS=100

# Security
VITE_BCRYPT_SALT_ROUNDS=12
VITE_SESSION_TIMEOUT=86400000

# Development
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true