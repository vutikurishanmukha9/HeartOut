# HeartOut Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED FOR PRODUCTION
# ============================================

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-super-secret-key-here-min-32-chars

# JWT secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars

# Database URL (PostgreSQL recommended for production)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/heartout

# ============================================
# OPTIONAL BUT RECOMMENDED
# ============================================

# Redis URL for distributed rate limiting (required for multiple instances)
# Format: redis://[:password]@host:port/db
REDIS_URL=redis://localhost:6379/0

# CORS origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# ============================================
# ENVIRONMENT
# ============================================

# Set to 'production' for deployment
FLASK_ENV=development

# ============================================
# RENDER.COM SPECIFIC
# ============================================
# These are automatically set by Render:
# - PORT
# - DATABASE_URL (from linked database)

# ============================================
# RAILWAY SPECIFIC
# ============================================
# These are automatically set by Railway:
# - PORT
# - DATABASE_URL (from linked database)
# - RAILWAY_ENVIRONMENT
